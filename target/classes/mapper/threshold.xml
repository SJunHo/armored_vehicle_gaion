<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.gaion.scas.analysis.mapper.ThresholdMapper">
	
	<select id="findThresholdList" resultType="kr.co.gaion.scas.analysis.model.ThresholdResponse">
		select *
		from THRESHOLD
	</select>
	
	<update id="updateThreshold" parameterType="kr.co.gaion.scas.analysis.model.ThresholdResponse">
		update THRESHOLD
		set min = #{min}, max = #{max}, 
		    applicability = #{applicability},
			mdfr = #{mdfr}, mdfcdt = #{mdfcdt}
		where snsrid = #{snsrid} 
	</update>
	
</mapper>