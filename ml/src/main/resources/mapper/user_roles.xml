<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.gaion.armoredVehicle.security.jwt.mapper.UserRolesMapper">
    <insert id="insertUserRoles" parameterType="kr.gaion.armoredVehicle.security.jwt.model.UserRole">
         insert into USER_ROLES(user_id, role_id)
         values(#{user_id}, #{role_id})
    </insert>
    <select id="findByUserId" parameterType="String" resultType="Integer">
    	select role_id
    	from USER_ROLES
    	where user_id = #{user_id}
    </select>
</mapper>